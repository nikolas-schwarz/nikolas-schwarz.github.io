{
	"version": "2.0.2",
	"tasks": [  
		{
			"label": "Compile SCSS",
			"type": "shell",
			"command": "/usr/local/bin/sass --trace --no-source-map ${file} ${fileDirname}/${fileBasenameNoExtension}.css",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"clear": true,
				"focus": true
			},
			"problemMatcher": {
				"owner": "javascript",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "^([^\\s].*)$",
						"file": 1
					},
					{
						"regexp": "^\\s+(\\d+):(\\d+)\\s+(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
						"line": 1,
						"column": 2,
						"severity": 3,
						"message": 4,
						"code": 5,
						"loop": true
					}
				]
			}
		}
	]
}
